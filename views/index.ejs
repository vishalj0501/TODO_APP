<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TodoApp</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
      crossorigin="anonymous"
    ></script>

    <nav class="navbar bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">TODO-APP</a>
        </div>
      </nav>
      <!-- <div class="d-flex mt-5"> -->
      <div class="container mt-5">
        <form action="/add/todo" method="post" class="d-flex">
            <input type="text" name="todo"  class="form-control" placeholder="Enter Todo">
        <!-- </form>


      </div> -->

      <input type="submit" value="Add Todo" class="btn btn-sl btn-primary mx-2">
    <!-- </div> -->
    </form>

    <ul class="list-group">
        <% todo.forEach(todos => { %>
            <li class="list-group-item"><%= todos.todo %><a href="/delete/todo/<%= todos._id %>" 
                class="btn btn-danger btn-sm" >Delete</a></li> 
            <!-- <a href="/delete/todo/<%= todos._id %>" class="btn btn-danger btn-sm">Danger</a> -->
        <% }) %>
        
      </ul>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
      integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
